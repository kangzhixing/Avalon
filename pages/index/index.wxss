/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
}

.title {
  color: grey;
  font-size: 18px;
  text-align: center;
}

.picker {
  font-size: 18px;
  text-align: center;
}

.userinfo-nickname {
  color: #aaa;
}

.vContent {
  position: fixed;
  width: 100%;
  top: 70%;
}

.vNum {
  border: 1px solid lightgrey;
  border-radius: 5px;
  background-color: lightskyblue;
  width: 160px;
  height: 45px;
  line-height: 45px;
}

.btnStart {
  width: 160px;
  margin-top: 10px;
  background-color: lightgrey;
}

.btnNewGame {
  width: 160px;
  background-color: green;
  color: white;
}
